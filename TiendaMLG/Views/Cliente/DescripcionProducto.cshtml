@using TiendaEntidades
@model TiendaEntidades.Articulo

<h1>@Html.DisplayFor(m => Model.Codigo) - @Html.DisplayFor(m => Model.Descripcion)</h1>

<hr />

<div class="row">
    <div class="col-md-8">
        <img class="card-img-top" src="/img/102348.png" alt="@Html.DisplayFor( m => Model.Codigo)">
    </div>
    <div class="col-md-4">
        <p>@Html.DisplayFor( m => Model.Descripcion)</p>
        <form asp-action="AgregarCarrito">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <input asp-for="IdArticulo" type="hidden" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Stock" class="control-label"></label>
                <input asp-for="Stock" class="form-control" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>

            <br />
            <div class="form-group">
                <input type="submit" value="Agregar a carrito" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}