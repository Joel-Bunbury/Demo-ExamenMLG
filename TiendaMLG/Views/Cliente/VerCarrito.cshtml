@model List<TiendaEntidades.CarritoDescripcion>

<h1>Carrito de compras</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Articulo
            </th>
            <th>
                Cantidad
            </th>
            <th>
                Total
            </th>
        </tr>
    </thead>
    <tbody>
        @if(Model.Count > 0)
        {
            @foreach (var articulo in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(m => articulo.Articulo.Codigo) - @Html.DisplayFor(m => articulo.Articulo.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(m => articulo.Cantidad)
                    </td>
                    <td>
                        @Html.DisplayFor(m => articulo.Total)
                    </td>
                </tr>
            }

            <tr>
                <td>
                </td>
                <td>
                    <b>Total</b>
                </td>
                <td>
                    @Model.Sum(a => a.Total);
                </td>
            </tr>
        }
        else
        {
            <tr>
                <td colspan="3" class="text-center">
                    Sin productos agregados
                </td>
            </tr>
        }


    </tbody>
</table>
@if (Model.Count > 0)
{
    <a asp-action="Pagar" class="btn btn-primary">
        Pagar <i class="bi bi-cash"></i>
    </a>
}