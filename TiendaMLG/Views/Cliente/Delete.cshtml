@using TiendaEntidades
@model TiendaEntidades.Cliente

<h1>Eliminar Cliente</h1>

<hr />

<div class="row">
    <div class="col-md-12">
        <form asp-action="Delete">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <input asp-for="IdCliente" type="hidden" class="form-control" />
            </div>

            <div class="alert alert-danger" role="alert">
                ¿Desea eliminar el cliente: @Html.DisplayFor(m => Model.Nombre) @Html.DisplayFor(m => Model.ApellidoPaterno) @Html.DisplayFor(m => Model.ApellidoMaterno) ?
            </div>

            <br />
            <div class="form-group">
                <input type="submit" value="Eliminar" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}